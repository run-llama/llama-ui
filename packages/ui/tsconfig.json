{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "allowJs": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "baseUrl": ".",
    "outDir": "./dist",
    "paths": {
      "@/*": ["./*"],
      "@llamaindex/workflows-client": ["../workflows-client/src"],
      "@shared/*": ["../../shared/*"]
    }
  },
  "include": [
    "src/**/*",
    "base/**/*",
    "lib/**/*",
    "lib",
    "stories/**/*",
    "tests/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
